---
// Importaciones
import '../styles/global.css';
import ProgressBar from '../components/ui/custom/ProgressBar.astro';
import Footer from '../components/common/Footer.astro';
import FloatingTire from '../components/common/FloatingTire.astro';
import CookieConsentInline from '../components/common/CookieConsentInline.astro';

// Props e interfaces
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

// Valores por defecto
const { 
  title = 'Distribuidor KENDA - Motos y Equipos',
  description = 'Conviértete en distribuidor de neumáticos KENDA para motocicletas. Más de 5,000 distribuidores confían en nosotros con 66 años de experiencia en calidad y servicio.',
  ogImage = '/images/og-kenda-distributor.jpg'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- SEO Keywords -->
    <meta name="keywords" content="distribuidor KENDA, neumáticos motocicletas, llantas motos, distribución México, motos equipos, kenda tires, motorcycle tires distributor, Erik Fabian Tamayo Heredia DEVELOPER" />
    <meta name="author" content="KENDA México" />
    <meta name="robots" content="index, follow" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />
    
    <!-- Preconectar con dominios externos -->
    <link rel="preconnect" href="https://hook.make.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    
    <!-- Fuentes -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Metadatos Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Analytics with consent management -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-9MY6DBBCDC"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      
      // Set default consent state
      gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'wait_for_update': 500
      });
      
      gtag('js', new Date());
      gtag('config', 'G-9MY6DBBCDC');
      
      // Global function for form tracking (available after consent)
      window.trackFormEvent = function(eventType, data = {}) {
        // Tracking blocked - waiting for consent
      };
    </script>

    <!-- Inyección de scripts -->
    <slot name="head" />
  </head>
  <body class="bg-[#F5F5F5] text-kenda-dark flex flex-col min-h-screen relative">
    <!-- Fondo tipo malla con z-index bajo para que esté detrás de todo, pero no afecte al footer -->
    <div class="fixed inset-0 w-full h-full pointer-events-none z-0" 
         style="background-image: url('/images/background.png'); background-repeat: repeat; background-color: #F5F5F5; opacity: 0.3;"></div>
    <!-- Barra de progreso horizontal -->
    <ProgressBar />
    
    <!-- Contenido principal -->
    <main class="flex-grow">
      <slot />
    </main>
    
    <!-- Componente Footer -->
    <Footer />
    
    <!-- Cookie Consent Component -->
    <CookieConsentInline />
    
    <!-- NoScript fallback for Meta Pixel -->
    <noscript>
      <img height="1" width="1" style="display:none"
      src="https://www.facebook.com/tr?id=239939421526941&ev=PageView&noscript=1" />
    </noscript>
    
    <!-- Script para navegación suave -->
    <script>
      // Scroll suave para los enlaces internos
      document.addEventListener('DOMContentLoaded', () => {
        const links = document.querySelectorAll('a[href^="#"]');
        
        links.forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const targetId = link.getAttribute('href');
            
            if (targetId && targetId !== '#') {
              const targetElement = document.querySelector(targetId);
              
              if (targetElement) {
                targetElement.scrollIntoView({
                  behavior: 'smooth'
                });
              }
            }
          });
        });
        
        // Manejar hash en la URL al cargar la página
        if (window.location.hash) {
          const targetId = window.location.hash;
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            // Pequeño retraso para asegurar que la página esté completamente cargada
            setTimeout(() => {
              targetElement.scrollIntoView({
                behavior: 'smooth'
              });
            }, 100);
          }
        }
      });
    </script>
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "KENDA Distribuidores México",
      "alternateName": "Motos y Equipos",
      "description": "Programa de distribuidores KENDA para neumáticos de motocicletas con más de 66 años de experiencia y 5,000 distribuidores en México",
      "url": "https://distribuidorkenda.com",
      "logo": "https://distribuidorkenda.com/images/kenda-logo.png",
      "image": "https://distribuidorkenda.com/images/og-kenda-distributor.jpg",
      "foundingDate": "1962",
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "sales",
        "areaServed": "MX",
        "availableLanguage": "Spanish"
      },
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "MX",
        "addressRegion": "México"
      },
      "offers": {
        "@type": "Offer",
        "name": "Programa de Distribuidor KENDA",
        "description": "Conviértete en distribuidor autorizado de neumáticos KENDA para motocicletas con inversión inicial de $50,000 MXN",
        "category": "Motorcycle Tire Distribution",
        "businessFunction": "http://purl.org/goodrelations/v1#Sell",
        "itemOffered": {
          "@type": "Service",
          "name": "Distribución de Neumáticos KENDA",
          "serviceType": "Business Partnership",
          "areaServed": "Mexico",
          "provider": {
            "@type": "Organization",
            "name": "KENDA México"
          }
        },
        "eligibleRegion": {
          "@type": "Country",
          "name": "Mexico"
        }
      },
      "makesOffer": {
        "@type": "Offer",
        "name": "Neumáticos KENDA para Motocicletas",
        "category": "Motorcycle Tires",
        "brand": {
          "@type": "Brand",
          "name": "KENDA"
        }
      },
      "sameAs": [
        "https://www.kenda.com.tw",
        "https://www.facebook.com/KendaTiresMexico",
        "https://www.instagram.com/kendatires_mx"
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "5000+",
        "bestRating": "5",
        "worstRating": "1"
      }
    }
    </script>
    
    <!-- Slot para scripts adicionales -->
    <slot name="footer-scripts" />
  </body>
</html>