<section id="testimonials" class="relative py-24 md:py-32 overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <!-- Encabezado -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Testimoniales
      </h2>
      <p class="text-base md:text-lg text-gray-600">
        Más de 5,000 distribuidores
      </p>
    </div>

    <!-- Carrusel de testimoniales -->
    <div class="testimonials-carousel relative mx-auto max-w-[320px] xs:max-w-[360px] sm:max-w-[640px] md:max-w-5xl lg:max-w-7xl px-2 sm:px-4 md:px-6">
      <div class="carousel-viewport relative overflow-visible h-[280px] sm:h-[320px] md:h-[450px]">
        <div class="carousel-track relative h-full">
          {testimonials.map((testimonial, index) => (
            <div 
              class="testimonial-card absolute w-[280px] xs:w-[300px] sm:w-[320px] md:w-[400px] h-[260px] sm:h-[280px] md:h-[420px] top-1/2 -translate-y-1/2 cursor-grab"
              data-testimonial-id={testimonial.id}
              data-index={index}
            >
              <div class="bg-white rounded-xl md:rounded-2xl lg:rounded-3xl p-3 xs:p-3.5 sm:p-4 md:p-5 h-full flex flex-col relative shadow-lg hover:shadow-xl transition-shadow duration-300">
                <!-- Quote Icon -->
                <div class="absolute top-2 left-2 text-gray-200">
                  <svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
