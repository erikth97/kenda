---
/**
 * Footer.astro
 * 
 * Footer para la landing page de KENDA
 */

// Año actual para el copyright
const currentYear = new Date().getFullYear();

// Logos de empresas
const companyLogos = {
  motomex: '/images/motomex.png',
  motosyequipos: '/images/motos_equipos.png'
};

// Redes sociales
const socialLinks = [
  { platform: 'facebook', url: 'https://facebook.com', icon: 'facebook' },
  { platform: 'linkedin', url: 'https://linkedin.com', icon: 'linkedin' },
  { platform: 'youtube', url: 'https://youtube.com', icon: 'youtube' },
  { platform: 'instagram', url: 'https://instagram.com', icon: 'instagram' }
];

// Dirección
const address = "Pino Suárez Nte. 750, Centro 64000, Monterrey N.L., México.";
---

<footer class="bg-kenda-orange text-white w-full pt-10 pb-8 md:pt-12 relative z-10">
  <div class="w-full px-6 sm:px-8 md:px-16 lg:px-24">
    <!-- Dirección y Copyright -->
    <div class="text-center mb-12 md:mb-16">
      <p class="text-sm sm:text-base mb-6 md:mb-8">{address}</p>
      <p class="text-sm sm:text-base text-white text-opacity-70">Copyright © {currentYear} Motos y Equipos</p>
    </div>
    
    <!-- Línea separadora -->
    <div class="border-t border-white border-opacity-20 my-8 md:my-12"></div>
    
    <!-- Logos y redes sociales -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Logos de empresas (izquierda) -->
      <div class="flex flex-col sm:flex-row items-center space-y-8 sm:space-y-0 sm:space-x-16 md:space-x-24 lg:space-x-32 mb-8 md:mb-0">
        <a href="https://motomex.com" target="_blank" rel="noopener noreferrer">
          <img src={companyLogos.motomex} alt="Motomex" class="h-10 sm:h-12">
        </a>
        <a href="#">
          <img src={companyLogos.motosyequipos} alt="Motos y Equipos" class="h-5 sm:h-6">
        </a>
      </div>
      
      <!-- Redes sociales (derecha) -->
      <div class="flex justify-center space-x-5 sm:space-x-6">
        {socialLinks.map(social => (
          <a 
            href={social.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label={`Síguenos en ${social.platform}`}
            class="text-white hover:text-gray-200 transition-colors"
          >
            {social.platform === 'facebook' && (
              <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
              </svg>
            )}
            {social.platform === 'linkedin' && (
              <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {social.platform === 'youtube' && (
              <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            )}
            {social.platform === 'instagram' && (
              <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>