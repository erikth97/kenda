      // Limitar a 10 d√≠gitos
      const match = cleaned.match(/^(\d{0,2})(\d{0,4})(\d{0,4})$/);
      
      if (match) {
        let formatted = '';
        if (match[1]) formatted += match[1];
        if (match[2]) formatted += (match[1] ? ' ' : '') + match[2];
        if (match[3]) formatted += (match[2] ? ' ' : '') + match[3];
        return formatted;
      }
      
