---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/home/HeroSection.astro';
import BrandsSection from '../components/home/BrandsSection.astro';
import BenefitsSection from "../components/sections/BenefitsSection.astro";
import RequirementsSection from "../components/requirements/RequirementsSection.astro";
import TestimonialsSection from '../components/TestimonialsSection.astro';
import FormSection from "../components/form/FormSection.astro";
import TireSection from "../components/TireSection.astro";
import TireSeparator from "../components/TireSeparator.astro";
---

<BaseLayout 
  title="Distribuidor KENDA México - Neumáticos Motocicletas | Motos y Equipos"
  description="Únete a más de 5,000 distribuidores KENDA en México. Inversión inicial $50,000 MXN. 66 años de experiencia en neumáticos para motocicletas. ¡Solicita información ahora!"
  ogImage="/images/og-kenda-distributor.jpg"
>
  <!-- Hero Section -->
  <HeroSection />
  
  <!-- Separador con llanta flotante -->
  <TireSeparator />
  
  <!-- Sección de Beneficios (ahora modular) -->
  <BenefitsSection />

  <!-- Sección de la llanta flotante -->
  <TireSection />

  <!-- Sección de Requisitos -->
  <RequirementsSection />

  <!-- Sección de Testimoniales -->
  <TestimonialsSection />

  <!-- Sección de Formulario -->
  <FormSection />
  
  <!-- Sección de Marcas -->
  <BrandsSection />
</BaseLayout>