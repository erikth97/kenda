---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/common/Section.astro';
import SectionHeading from '../components/common/SectionHeading.astro';
import HeroSection from '../components/home/HeroSection.astro';
import BrandsSection from '../components/home/BrandsSection.astro';
import Container from '../layouts/Container.astro';
import BenefitCard from '../components/ui/custom/BenefitCard.astro';
import RequirementsSection from "../components/requirements/RequirementsSection.astro";
import TestimonialsSection from '../components/TestimonialsSection.astro';
import FormSection from "../components/form/FormSection.astro";
import TireSection from "../components/TireSection.astro";

// Iconos para beneficios - Iconos negros simples
const benefitIcons = {
  shopping: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-black"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" /></svg>',
  book: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-black"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" /></svg>',
  chat: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-black"><path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z" /></svg>',
  link: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-black"><path stroke-linecap="round" stroke-linejoin="round" d="m13.19 8.688 1.242 7.244-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" /></svg>',
  creditCard: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-black"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" /></svg>'
};

// Datos de beneficios - Cambiado el nombre de la variable de beneficios a benefits
const benefits = [
  {
    title: "Descuentos Exclusivos",
    description: "Ofrecemos descuentos y promociones para ampliar la variedad de productos y mejorar el servicio.",
    icon: benefitIcons.shopping
  },
  {
    title: "Capacitación Continua",
    description: "En Motocicleta y Equipos capacitamos a distribuidores y su personal para asegurar su éxito.",
    icon: benefitIcons.book
  },
  {
    title: "Asesoría y Soporte",
    description: "Nuestro equipo te brindará asistencia en cada paso del proceso.",
    icon: benefitIcons.chat
  },
  {
    title: "Apoyo Publicitario",
    description: "Ofrecemos apoyo publicitario y programas de lealtad, respetando a nuestros distribuidores.",
    icon: benefitIcons.link
  },
  {
    title: "Financiamiento",
    description: "Línea de crédito y descuentos por pagos de contado.",
    icon: benefitIcons.creditCard
  }
];
---

<BaseLayout title="Distribuidor KENDA - Motos y Equipos">
  <!-- Hero Section con la implementación actualizada -->
  <HeroSection />
  
  <!-- Sección de Beneficios con fondo gris claro cuadriculado -->
  <div class="benefits-section relative overflow-hidden py-16">
    <Container>
      <SectionHeading
        title="Beneficios"
        description="En Motocicletas y Equipos, ofrecemos precios competitivos respaldados por 66 años de experiencia en calidad y servicio."
      />
      
      <!-- Primera fila: 3 tarjetas -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        {benefits.slice(0, 3).map(beneficio => (
          <BenefitCard
            title={beneficio.title}
            description={beneficio.description}
            icon={beneficio.icon}
            isHtml={true}
            className="h-full min-h-[280px]" 
          />
        ))}
      </div>
      
      <!-- Segunda fila: 2 tarjetas centradas con el mismo ancho -->
      <div class="md:px-[16.67%]"> {/* 16.67% = 1/6 del ancho total para centrar */}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {benefits.slice(3, 5).map(beneficio => (
            <BenefitCard
              title={beneficio.title}
              description={beneficio.description}
              icon={beneficio.icon}
              isHtml={true}
              className="h-full min-h-[280px]" 
            />
          ))}
        </div>
      </div>
    </Container>
  </div>

  <!-- Sección de la llanta flotante entre beneficios y requisitos -->
  <TireSection />

  <!-- Sección de Requisitos -->
  <RequirementsSection />
  


  <!-- Sección de Testimoniales -->
  <TestimonialsSection />

  <!-- Sección de Formulario -->
  <FormSection />
  
  <!-- Sección de Marcas -->
  <BrandsSection />
</BaseLayout>

<style>
  /* Estilo para el patrón de cuadrícula en el fondo de la sección de beneficios */
  .benefits-section {
    background-color: #f5f5f5; /* Fondo gris claro */
    background-image: 
      linear-gradient(to right, rgba(255,255,255,1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,1) 1px, transparent 1px);
    background-size: 50px 50px; /* Tamaño de las celdas */
  }
</style>